    <!--       android:id="@+id/bttn_valid_manual_incarca_trmiteri"-->
    <!--       android:layout_width="wrap_content"-->
    <!--       android:layout_height="wrap_content"-->
    <!--       android:text="@string/validare_incarcare_trimiteri"-->
    <!--       android:elevation="4dp"/>-->

</LinearLayout>