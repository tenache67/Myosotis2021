<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbarSimplu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scaneaza/Introdu manual codul de bare"
        android:layout_marginTop="125dp"
        android:textSize="12sp"/>
    <EditText
        android:id="@+id/cod_bare"
        android:layout_marginTop="25dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:maxLength="13"
        android:inputType="numberDecimal"
        android:focusedByDefault="true"/>
    <TextView
        android:id="@+id/reporter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_cod_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ClickManual"
        android:text="Introduc manual codul" />

    <EditText
        android:id="@+id/edittext_codbare_manual"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:focusedByDefault="true"
        android:inputType="numberDecimal"
        android:maxLength="13"
        android:textAlignment="center" />

