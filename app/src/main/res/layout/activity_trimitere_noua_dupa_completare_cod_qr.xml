<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffef8e"
    tools:context=".TrimitereNouaDupaCompletareCodQR">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbarSimplu"/>
<RelativeLayout
    android:id="@+id/relativelayout_trmnoua_exp_dest"
    android:layout_marginTop="60dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/TVExpeditor_id"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Expeditor:"
        android:textSize="30sp"
        android:textStyle="bold">
    </TextView>
    <AutoCompleteTextView
        android:id="@+id/ac_expeditor_id"
        android:hint="Expeditor"
        android:completionThreshold="1"
        android:completionHint="Expeditor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/TVExpeditor_id">

    </AutoCompleteTextView>
    <TextView
        android:id="@+id/TVDestinatar_id"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Destinatar:"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold">
    </TextView>
    <AutoCompleteTextView
        android:id="@+id/ac_destinatar_id"
        android:hint="Destinatar"
        android:completionThreshold="1"
        android:completionHint="Destinatar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/TVDestinatar_id">

    </AutoCompleteTextView>
    <TextView
        android:id="@+id/TVPrioritate_id"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Prioritate:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp">

    </TextView>
    <Spinner
        android:id="@+id/spinner_prioritate_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/TVPrioritate_id">

    </Spinner>
    <TextView
        android:id="@+id/TVConditiiSpeciale_id"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Cond. speciale?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp">
    </TextView>

    <Spinner
        android:id="@+id/spinner_condspec_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/TVConditiiSpeciale_id"
        android:layout_marginTop="150dp">

    </Spinner>
    <TextView
        android:id="@+id/TVTipul_trimterii_id"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TVConditiiSpeciale_id"
        android:text="Tipul trimterii"
        android:textSize="25sp"
        android:textStyle="bold"
        >
    </TextView>

    <Spinner
        android:id="@+id/spinner_tip_trimitere_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/TVTipul_trimterii_id"
        android:layout_below="@+id/spinner_condspec_id">

    </Spinner>
</RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_centerInParent="true"
        android:layout_below="@+id/relativelayout_trmnoua_exp_dest"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvare" />

</RelativeLayout>